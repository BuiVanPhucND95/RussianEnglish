<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/size5dp">

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/imgLeft"
            android:layout_width="@dimen/size20dp"
            android:layout_height="@dimen/size20dp"
            android:layout_gravity="center"
            android:layout_weight="1"
             />

        <TextView
            android:id="@+id/txtLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="English"
            android:layout_marginLeft="@dimen/size5dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text12sp" />

        <ImageView
            android:id="@+id/imgchange"
            android:layout_width="@dimen/size20dp"
            android:layout_height="@dimen/size20dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/icon_change" />
        <TextView
            android:layout_marginLeft="@dimen/size5dp"
            android:id="@+id/txtRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Russia"
            android:textColor="@color/black"
            android:textSize="@dimen/text12sp" />

        <ImageView
            android:scaleType="centerCrop"
            android:layout_marginLeft="@dimen/size5dp"
            android:id="@+id/imgRight"
            android:layout_width="@dimen/size20dp"
            android:layout_height="@dimen/size20dp"
            android:layout_gravity="right"
            android:layout_weight="1"
             />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_orange" />

    <FrameLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_gravity="center"
            android:gravity="center|left"
            android:id="@+id/edtWord"
            android:paddingLeft="@dimen/size5dp"
            android:textSize="@dimen/text12sp"
            android:background="@drawable/background_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the word" />

        <ImageView
            android:id="@+id/imgDelete"
            android:layout_width="@dimen/size20dp"
            android:layout_height="@dimen/size20dp"
            android:layout_gravity="right"
            android:src="@drawable/icon_delete" />
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_orange" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingLeft="@dimen/padding"
            android:textColor="@color/black"
            android:textSize="@dimen/text12sp" />

        <ImageView
            android:id="@+id/imgListen"
            android:layout_width="@dimen/size20dp"
            android:layout_height="@dimen/size20dp"

            android:src="@drawable/icon_listen" />
    </LinearLayout>
</LinearLayout>